<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.map.ResultFragment">

    <ImageView
            android:id="@+id/result_img"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_gorae"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="땅따먹기 게임"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/result_img"
            app:layout_constraintEnd_toEndOf="@+id/result_img"
            app:layout_constraintTop_toBottomOf="@+id/result_img"/>

    <TextView
            android:id="@+id/result_booth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:lineSpacingExtra="1.5sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            tools:text="고래잡이 부스"
            app:layout_constraintTop_toBottomOf="@+id/result_title"
            app:layout_constraintEnd_toEndOf="@+id/result_title"
            app:layout_constraintStart_toStartOf="@+id/result_title"/>

    <TextView
            android:id="@+id/result_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="356dp"
            android:textColor="@color/colorPrimary"
            tools:text="X"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result_img"
            android:layout_marginTop="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/result_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="32dp"
            app:strokeColor="@color/colorPrimary"
            android:textColor="#000"
            android:text="뒤로 돌아가기"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>