<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center">

    <ImageView
            android:id="@+id/image_dialog_coupon_gorae"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_gorae"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰사용"
            app:layout_constraintStart_toEndOf="@id/image_dialog_coupon_gorae"
            app:layout_constraintTop_toTopOf="@id/image_dialog_coupon_gorae"
            app:layout_constraintBottom_toBottomOf="@id/image_dialog_coupon_gorae"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:id="@+id/textView3"/>

    <EditText
            android:inputType="text"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/image_dialog_coupon_gorae"
            android:layout_marginTop="24dp"
            android:hint="쿠폰코드를 입력해주세요"
            android:textSize="14sp"
            android:padding="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            android:background="@drawable/back_write"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/coupon_code_edit"/>

    <Button
            android:id="@+id/coupon_use_bt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/coupon_code_edit"
            android:layout_marginBottom="8dp"
            android:background="@drawable/back_bt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="사용하기"
            android:textColor="@android:color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>