<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center">

    <ImageView
            android:id="@+id/image_dialog_stamp_gorae"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_gorae"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스탬프 투어"
            app:layout_constraintStart_toEndOf="@id/image_dialog_stamp_gorae"
            app:layout_constraintTop_toTopOf="@id/image_dialog_stamp_gorae"
            app:layout_constraintBottom_toBottomOf="@id/image_dialog_stamp_gorae"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:id="@+id/textView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/string_stamp_info"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.483"/>

</androidx.constraintlayout.widget.ConstraintLayout>